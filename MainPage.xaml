<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NearestIntegerFinder"
             x:Class="NearestIntegerFinder.MainPage">
    <StackLayout>
        <Label Text="Введіть дійсне число:"/>
        <Entry x:Name="inputEntry" Placeholder="0"/>
        <Button Text="Знайти найближче ціле" Clicked="FindNearestInteger_Clicked"/>
        <Label x:Name="resultLabel"/>
    </StackLayout>
</ContentPage>
